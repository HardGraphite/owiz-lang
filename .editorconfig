root = true

[*]
charset = utf-8
indent_style = space
tab_width = 8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{h,c,cc}]
indent_style = space
indent_size = 4

[{CMakeLists.txt,*.cmake}]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[*.py]
indent_style = space
indent_size = 4

[*.md]
indent_style = space
indent_size = 2

[/VERSION]
insert_final_newline = false
